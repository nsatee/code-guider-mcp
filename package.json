{
  "name": "code-guider-mcp",
  "version": "1.0.0",
  "description": "Local MCP server for code guidance and workflow automation",
  "main": "dist/index.js",
  "bin": {
    "code-guider-mcp": "dist/cli.js"
  },
  "type": "module",
  "files": [
    "dist/**/*",
    "drizzle/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target node && bun build src/cli.ts --outdir dist --target node",
    "build:all": "bun build src/index.ts --outdir dist --target node && bun build src/migrate.ts --outdir dist --target node && bun build src/cli.ts --outdir dist --target node",
    "dev": "bun run build && bun run dist/index.js",
    "start": "bun run dist/index.js",
    "run": "bun src/index.ts",
    "migrate": "bun run build:all && bun run dist/migrate.js",
    "postinstall": "node dist/migrate.js || echo 'Migration failed - run manually with: bun run migrate'",
    "db:generate": "bunx drizzle-kit generate",
    "db:migrate": "bunx drizzle-kit migrate",
    "db:studio": "bunx drizzle-kit studio",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "prepublishOnly": "bun run build",
    "release": "bun scripts/release.js",
    "release:patch": "bun scripts/release.js patch",
    "release:minor": "bun scripts/release.js minor",
    "release:major": "bun scripts/release.js major",
    "setup-github": "bun scripts/setup-github.js"
  },
  "keywords": ["mcp", "code-guidance", "workflow", "automation", "ai", "code-analysis", "typescript", "sqlite"],
  "author": {
    "name": "Your Name",
    "email": "your.email@example.com",
    "url": "https://github.com/yourusername"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/code-guider.git"
  },
  "homepage": "https://github.com/yourusername/code-guider#readme",
  "bugs": {
    "url": "https://github.com/yourusername/code-guider/issues"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "os": ["darwin", "linux", "win32"],
  "cpu": ["x64", "arm64"],
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/yourusername"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.4.0",
    "@xenova/transformers": "^2.6.2",
    "chalk": "^5.3.0",
    "drizzle-kit": "^0.31.4",
    "drizzle-orm": "^0.44.5",
    "uuid": "^9.0.1",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/jest": "^29.5.0",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  }
}
